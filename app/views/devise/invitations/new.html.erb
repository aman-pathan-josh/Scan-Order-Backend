<!-- views/devise/invitations/new.html.erb -->

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0 fs-4">Invite a Restaurant Owner</h2>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "needs-validation" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <% resource.class.invite_key_fields.each do |field| -%>
              <div class="mb-3">
                <%= f.label field, class: "form-label" %>
                <%= f.text_field field, class: "form-control", required: true, autofocus: field == resource.class.invite_key_fields.first %>
              </div>
            <% end -%>

            <div class="d-grid mt-4">
              <%= f.submit t("devise.invitations.new.submit_button"), class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>