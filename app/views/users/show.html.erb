<div style="display: flex;justify-content:center;flex-direction:column;align-items:center">
    <h1>User Details</h1>

    <table style="width: 80%;">
        <tr>
            <th style="border:1px solid #000;height:50px">First Name</th>
            <th style="border:1px solid #000;height:50px">Last Name</th>
            <th style="border:1px solid #000;height:50px">Email</th>
        </tr>
        <tr>
            <td style="border:1px solid #000;width: 30%; height:30px; text-align:center"> <%= @user.first_name %> </td>
            <td style="border:1px solid #000;width: 20%; height:30px; text-align:center"> <%= @user.last_name %> </td>
            <td style="border:1px solid #000;width: 20%; height:30px; text-align:center"> <%= @user.email %> </td>
        </tr>
    </table>
    <%= link_to "Go Back", users_path %>

</div>
